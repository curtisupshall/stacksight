{
    "compilerOptions": {
      "target": "ESNext",                               
      "module": "ESNext",                               
      "lib": ["ESNext", "DOM"],                        
      "allowJs": true,                                 
      "skipLibCheck": true,                             
      "esModuleInterop": true,                          
      "forceConsistentCasingInFileNames": true,        
      "strict": true,                                   
      "moduleResolution": "node",                      
      "resolveJsonModule": true,                        
      "isolatedModules": true,                         
      "noEmit": true,                                  
      "jsx": "react-jsx"                               
    },
    "include": ["src"],
    "exclude": ["node_modules"]
  }
  